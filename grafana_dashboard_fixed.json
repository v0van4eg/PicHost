        "id": 5,
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "gauge",
        "title": "Disk Usage Percentage",
        "targets": [
          {
            "expr": "(disk_usage_bytes_used{path=\"/app/images\"} / disk_usage_bytes_total{path=\"/app/images\"}) * 100",
            "legendFormat": "Disk Usage % (/app/images)",
            "refId": "A"
          },
          {
            "expr": "(disk_usage_bytes_used{path=\"/images\"} / disk_usage_bytes_total{path=\"/images\"}) * 100",
            "legendFormat": "Disk Usage % (/images)",
            "refId": "B"
          },
          {
            "expr": "(disk_usage_bytes_used{path=\"/\"} / disk_usage_bytes_total{path=\"/\"}) * 100",
            "legendFormat": "Disk Usage % (/)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 85
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "displayMode": "gradient",
          "minVizHeight": 75,
          "minVizWidth": 75,
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
