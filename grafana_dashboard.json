{
  "dashboard": {
    "id": null,
    "title": "Application Metrics Dashboard",
    "tags": ["prometheus", "metrics", "application"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "album_count",
            "legendFormat": "Albums",
            "refId": "A"
          },
          {
            "expr": "article_count",
            "legendFormat": "Articles",
            "refId": "B"
          },
          {
            "expr": "file_count",
            "legendFormat": "Files",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "text": {},
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "alignItems": "center",
          "values": true
        }
      },
      {
        "id": 2,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "(disk_usage_bytes_used{path=\"/app/images\"} / disk_usage_bytes_total{path=\"/app/images\"}) * 100",
            "legendFormat": "Disk Usage % (/app/images)",
            "refId": "A"
          },
          {
            "expr": "(disk_usage_bytes_used{path=\"/images\"} / disk_usage_bytes_total{path=\"/images\"}) * 100",
            "legendFormat": "Disk Usage % (/images)",
            "refId": "B"
          },
          {
            "expr": "(disk_usage_bytes_used{path=\"/\"} / disk_usage_bytes_total{path=\"/\"}) * 100",
            "legendFormat": "Disk Usage % (/)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 85
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "fieldOptions": {
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 3,
        "title": "Disk Space Usage (bytes)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "disk_usage_bytes_total{path=\"/app/images\"}",
            "legendFormat": "Total (/app/images)",
            "refId": "A"
          },
          {
            "expr": "disk_usage_bytes_used{path=\"/app/images\"}",
            "legendFormat": "Used (/app/images)",
            "refId": "B"
          },
          {
            "expr": "disk_usage_bytes_free{path=\"/app/images\"}",
            "legendFormat": "Free (/app/images)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 0.1
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 12,
        "title": "Disk Space Usage Alternative Paths (bytes)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "disk_usage_bytes_total{path=\"/images\"}",
            "legendFormat": "Total (/images)",
            "refId": "A"
          },
          {
            "expr": "disk_usage_bytes_used{path=\"/images\"}",
            "legendFormat": "Used (/images)",
            "refId": "B"
          },
          {
            "expr": "disk_usage_bytes_free{path=\"/images\"}",
            "legendFormat": "Free (/images)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 0.1
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 13,
        "title": "Root Disk Space Usage (bytes)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "disk_usage_bytes_total{path=\"/\"}",
            "legendFormat": "Total (/)",
            "refId": "A"
          },
          {
            "expr": "disk_usage_bytes_used{path=\"/\"}",
            "legendFormat": "Used (/)",
            "refId": "B"
          },
          {
            "expr": "disk_usage_bytes_free{path=\"/\"}",
            "legendFormat": "Free (/)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 0.1
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 4,
        "title": "Database Size",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "database_size_bytes",
            "legendFormat": "Database Size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 5,
        "title": "Application Uptime",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "application_uptime_seconds",
            "legendFormat": "Uptime",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "text": {}
        }
      },
      {
        "id": 6,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (method)",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "req/s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 7,
        "title": "HTTP Status Codes",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (status)",
            "legendFormat": "Status {{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "req/s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 8,
        "title": "HTTP Request Duration (95th percentile)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, method))",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "title": "Active Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "active_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 10,
        "title": "HTTP Request Duration Histogram",
        "type": "histogram",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "http_request_duration_seconds_bucket",
            "legendFormat": "{{method}} - {{endpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 11,
        "title": "Album, Article, and File Counts Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 48},
        "targets": [
          {
            "expr": "album_count",
            "legendFormat": "Albums",
            "refId": "A"
          },
          {
            "expr": "article_count",
            "legendFormat": "Articles",
            "refId": "B"
          },
          {
            "expr": "file_count",
            "legendFormat": "Files",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s"
  }
}