# .env.example
# Шаблон файла конфигурации для PicHost
# Скопируйте этот файл в .env и заполните значениями для вашего окружения

# Domain
# Внешний адрес, на котором будут публиковаться картинки (например, images.example.com)
DOMAIN=your_domain_here

# Flask
# Очень длинный и случайный секретный ключ для подписи сессий.
# Генерируется один раз, например: python -c 'import secrets; print(secrets.token_hex(32))'
FLASK_SECRET_KEY=your_very_long_and_random_secret_key_here

# Database
# Убедитесь, что строка подключения правильно использует эти переменные в database.py
POSTGRES_DB=pichosting
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=your_postgres_host_or_service_name # например, 'db' для Docker Compose
POSTGRES_PORT=5432

# Keycloak
KEYCLOAK_BASE_URL=http://your_keycloak_url
KEYCLOAK_REALM=your_keycloak_realm

# OAuth Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_SCOPE=openid profile email
OAUTH_CODE_CHALLENGE_METHOD=S256

